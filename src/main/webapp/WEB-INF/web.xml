<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet-mapping>
        <servlet-name>CustomerHandler</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerHandler</servlet-name>
        <servlet-class>com.example.servlet_practical.api.CustomerHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ItemHandler</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemHandler</servlet-name>
        <servlet-class>com.example.servlet_practical.api.ItemHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderHandler</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderHandler</servlet-name>
        <servlet-class>com.example.servlet_practical.api.OrderHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RecentOrderDetailsHandler</servlet-name>
        <url-pattern>/query</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RecentOrderDetailsHandler</servlet-name>
        <servlet-class>com.example.servlet_practical.api.RecentOrderDetailsHandler</servlet-class>
    </servlet>
</web-app>